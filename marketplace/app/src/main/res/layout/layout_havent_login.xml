<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/containerHaventLogin"
    android:background="?attr/colorSurface"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvNotLoginTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:letterSpacing="0.03"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.4"
        android:text="@string/anda_belum_login"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/silahkan_login_untuk_dapat_menggunakan_fitur_ini"
        android:layout_margin="20dp"
        android:textSize="14sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/tvNotLoginTitle"
        app:layout_constraintStart_toStartOf="@id/tvNotLoginTitle"
        app:layout_constraintEnd_toEndOf="@id/tvNotLoginTitle"/>

</androidx.constraintlayout.widget.ConstraintLayout>